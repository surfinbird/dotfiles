#!/bin/bash

export auto_proxy=""
export no_proxy="localhost,127.*,10.*,192.168.*,169.254.*"

case "$DESKTOP_SESSION" in
    i3)
        polkit_kde="/usr/lib/x86_64-linux-gnu/libexec/polkit-kde-authentication-agent-1"
        if [ -f "$polkit_kde" ]; then
            echo "Starting kde auth agent"
           "$polkit_kde" &
        fi
        ;;
esac

msg() {
    local template="$1"; shift
    printf "$template\n" ${1+"$@"} >&2
}

shopt -s nullglob

setxkbmap -option 'caps:escape'
setxkbmap no

num_monitors=$(DISPLAY=:0 xrandr -q | grep ' connected' | wc -l)

case "$num_monitors" in
    1)
        #msg "skip dpi voodoo"
        $HOME/.scripts/xsetup.sh
        ;;
    *)
        $HOME/.scripts/xsetup.sh
        ;;
esac

msg "= Running session [$*]..."
exec "$@"
